{
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --fix",
    "test": "jest"
  },
"jest": {
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "useESM": true }]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "setupFiles": ["<rootDir>/tests/setupEnv.ts"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setupTimeout.ts"]
},
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "joi": "^17.12.0",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "pino": "^10.1.0",
    "redis": "^4.6.7",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.30",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
